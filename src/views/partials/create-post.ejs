<div class="post-card new-post-form">
  <h2 class="form-title">Create a new post</h2>

  <form id="create-post-form">
    <div class="post-header">
      <strong><%= user.fullName %></strong>
    </div>

    <div class="post-content">
      <textarea name="content" class="comment-input" placeholder="What's on your mind?" required></textarea>
    </div>

    <div class="post-actions">
      <button type="submit" class="glass-button">Post</button>
    </div>
  </form>
</div>
