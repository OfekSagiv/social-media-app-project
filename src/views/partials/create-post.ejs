<div class="post-card new-post-form">
    <h2 class="form-title">Create a new post</h2>

    <form id="create-post-form" enctype="multipart/form-data">
        <div class="post-header">
            <strong><%= user.fullName %></strong>
        </div>

        <div class="post-content">
            <textarea name="content" class="comment-input" placeholder="What's on your mind?" required></textarea>
        </div>

        <div class="form-group">
            <label for="media">Upload your media (Optional) </label>
            <input type="file" id="media" name="media" accept="image/*,video/*" multiple style="display: none" />
            <label for="media" class="glass-button">Choose Files</label>
            <div id="selected-files-list">
                <p class="placeholder">No chosen file</p>
            </div>
        </div>

        <% if (user.xAuth && user.xAuth.accessToken) { %>
        <div class="share-x-container">
            <div class="share-x-checkbox">
                <input type="checkbox" id="shareToX" name="shareToX" value="true" />
                <label for="shareToX" class="x-checkbox-label">
                    <span class="checkbox-custom"></span>
                    <span class="x-label-content">

                        <span>Share to <i class="bi bi-twitter-x"></i></span>
                    </span>
                </label>
            </div>
            <div class="x-status">
                <span class="x-connected">Connected</span>
            </div>
        </div>
        <% } else { %>
        <div class="share-x-container">
            <div class="x-connect-prompt">
                <div class="x-connect-info">
                    <span>Connect your <i class="bi bi-twitter-x"></i> account to post also there</span>
                </div>
                <a href="/x-auth" class="x-connect-btn">Connect <i class="bi bi-twitter-x"></i></a>
            </div>
        </div>
        <% } %>

        <div class="post-actions">
            <button type="submit" class="glass-button">Post</button>
        </div>
    </form>
</div>
