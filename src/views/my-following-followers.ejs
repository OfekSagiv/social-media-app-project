<!DOCTYPE html>
<html>
<head>
    <title>My Following & Followers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/navbar.css">
    <link rel="stylesheet" href="/styles/my-following-followers.css">
</head>
<body>
<%- include('partials/navbar', { user }) %>

<main class="followers-container">
    <section class="followers-column">
        <h2>Following</h2>

        <% if (following.length === 0) { %>
            <p>You are not following anyone yet.</p>
        <% } else { %>
            <ul class="followers-list">
                <% following.forEach(f => { %>
                    <li class="followers-item">
                        <a href="/profile/<%= f._id %>">
                            <img src="<%= f.profileImageUrl || '/img/default-avatar.jpg' %>" alt="<%= f.fullName %>'s avatar" class="followers-avatar" />
                            <%= f.fullName %> (@<%= f.username %>)
                        </a>
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </section>

    <section class="followers-column">
        <h2>Followers</h2>

        <% if (followers.length === 0) { %>
            <p>You don't have any followers yet.</p>
        <% } else { %>
            <ul class="followers-list">
                <% followers.forEach(f => { %>
                    <li class="followers-item">
                        <a href="/profile/<%= f._id %>">
                            <img src="<%= f.profileImageUrl || '/img/default-avatar.jpg' %>" alt="Avatar" class="followers-avatar" />
                            <%= f.fullName %> (@<%= f.username %>)
                        </a>
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </section>
</main>

<script src="/js/navbar.js" defer></script>
</body>
</html>
