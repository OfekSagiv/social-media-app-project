<!DOCTYPE html>
<html lang="en">
<head>
  <title>Create Group</title>
  <link rel="stylesheet" href="/styles/global.css" />
  <link rel="stylesheet" href="/styles/navbar.css" />
  <link rel="stylesheet" href="/styles/create-group.css" />
</head>
<body>

<%- include('partials/navbar', { user }) %>

<main class="create-group-form-wrapper">
  <form id="create-group-form">
    <h2 class="form-title">Create a New Group</h2>

    <input type="text" name="name" placeholder="Group Name" required maxlength="40" />
    <textarea name="description" placeholder="Group Description (optional)" maxlength="300"></textarea>
    <button type="submit" class="glass-button">Create Group</button>
  </form>
</main>

<script src="/js/create-group.js" defer></script>
<script src="/js/navbar.js" defer></script>
</body>
</html>
